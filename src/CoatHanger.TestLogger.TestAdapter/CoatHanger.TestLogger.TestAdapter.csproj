<!--
This csproj file is only used for local debugging.  
Depending on what version of vstest or dotnet CLI, it's expected a nuget package for these loggers 
installed in visual studio. The work-around is to have a .dll assembly that matches ".TestAdapter". 

https://github.com/Microsoft/vstest-docs/blob/master/docs/report.md#create-a-test-logger
-->
<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<SourceRoot Condition="$(SourceRoot) == ''">..\..\</SourceRoot>
	</PropertyGroup>

	<PropertyGroup>
		<TargetFramework>netstandard2.0</TargetFramework>
		<AssemblyName>CoatHanger.TestLogger.TestAdapter</AssemblyName>
		<Version>$(PackageVersion)</Version>
		<IsPackable>false</IsPackable>

		<!-- Disable stylecop since the files are already checked in TestLogger project -->
		<StylecopEnabled>false</StylecopEnabled>
	</PropertyGroup>

	<ItemGroup>
		<Compile Include="..\CoatHanger.TestLogger\CoatHangerLogger.cs">
			<Link>CoatHangerLogger.cs</Link>
		</Compile>
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="System.ValueTuple" Version="4.3.0" />
		<PackageReference Include="Newtonsoft.Json" Version="12.0.3" />
	</ItemGroup>

	<ItemGroup>
	  <ProjectReference Include="..\CoatHanger.Core\CoatHanger.Core.csproj" />
	</ItemGroup>
</Project>